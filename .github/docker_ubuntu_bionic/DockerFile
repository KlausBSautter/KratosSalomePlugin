FROM ubuntu:bionic

ENV HOME /root

RUN apt-get update -y && apt-get -y install --no-install-recommends \
    software-properties-common \
    wget \
    build-essential \
    python-dev \
    python3-dev \
    && rm -rf /var/lib/apt/lists/* && \
    # getting salome 9.3
    wget -nv "https://www.salome-platform.org/downloads/previous-versions/salome-v9.3/DownloadDistr?platform=OS1.UB18.04&version=9.3.0" -O salome_dir.tar.gz && \
    tar xzf salome_dir.tar.gz && \
    rm salome_dir.tar.gz && \
    mv SALOME-9.3.0-UB18.04-SRC $HOME/salome_dir && \
    # remove unnecessary files
    rm -rf $HOME/salome_dir/ARCHIVES/ && \
    rm -rf $HOME/salome_dir/SOURCES/ && \
    #
    apt-get -y remove \
        software-properties-common \
        wget && \
    apt-get clean apt-get autoremove

CMD ["${HOME}/salome_dir/salome"]

WORKDIR $HOME
